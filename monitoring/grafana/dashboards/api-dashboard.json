{
  "dashboard": {
    "id": null,
    "title": "API Metrics",
    "tags": ["api", "http", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "HTTP Request Rate",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}} {{status}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "type": "graph",
        "title": "HTTP Request Duration",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "s",
            "label": "Seconds"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Error Rate",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 4
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m])",
            "refId": "A"
          }
        ],
        "options": {
          "fieldOptions": {
            "defaults": {
              "unit": "percentunit"
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Current Requests",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 4
        },
        "targets": [
          {
            "expr": "http_requests_in_flight",
            "refId": "A"
          }
        ],
        "options": {
          "fieldOptions": {
            "defaults": {
              "unit": "none"
            }
          }
        }
      }
    ]
  }
}